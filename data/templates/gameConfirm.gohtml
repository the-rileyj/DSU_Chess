<html>
    {{template "head"}}
    <body>
        {{template "navIn"}}
        <div class="container-fluid" style="padding: 0 1rem 0 0">
            {{if .Error}}
                <div class="text-center">
                    <h1 style="color: red">{{.}}</h1>
                </div>
            {{end}}
            <form action="/confirm" method="POST">
                <div class="form-group row">
                    <label for="inputPID" class="col-sm-2 col-form-label">
                        Player ID
                    </label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="inputPID" name="pid" placeholder="PID">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="inputWinnerPID" class="col-sm-2 col-form-label">
                        Winner ID
                    </label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="inputWinnerPID" name="wpid" placeholder="Winner PID">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="inputDate" class="col-sm-2 col-form-label">
                        Date of Game
                    </label>
                    <div class="col-sm-10">
                        <input type="date" class="form-control" id="inputDate" name="date" placeholder="Date">
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col">
                        <button type="submit" class="btn btn-primary">
                            Submit
                        </button>
                    </div>
                </div>
            </form>
            {{ if not .Error }}
                {{range .Achallenges}}
                    <div class="row">
                        <div class="col-sm-8">
                            <a href="/profile/{{.Initiator}}">{{.Opponent.Fname}} {{.Opponent.Lname}}</a> {{.WinningString}} {{.Date}}
                        </div>
                        <div class="col-sm-2">
                            <form action="/accept/{{.ID}}" method="POST">
                                <button type="submit" class="btn btn-primary">
                                    Accept
                                </button>
                            </form>
                        </div>
                        <div class="col-sm-2">
                            <form action="/deny/{{.ID}}" method="POST">
                                <button type="submit" class="btn btn-primary">
                                    Deny
                                </button>
                            </form>
                        </div>
                    </div>
                {{end}}
                {{range .Ichallenges}}
                    <div class="row">
                        <div class="col-sm-10">
                            <a href="/profile/{{.Acceptor}}">{{.Opponent.Fname}} {{.Opponent.Lname}}</a> {{.WinningString}} {{.Date}}
                        </div>
                        <div class="col-sm-2">
                            <form action="/cancel/{{.ID}}" method="POST">
                                <button type="submit" class="btn btn-primary">
                                    Cancel
                                </button>
                            </form>
                        </div>
                    </div>
                {{end}}
            {{end}}
            {{template "js"}}
        </div>
    </body>
</html>